# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token  # Get from @BotFather

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_key  # Get from https://platform.openai.com/api-keys

# OKX API Configuration
OKX_API_KEY=your_okx_key  # Get from OKX API Management
OKX_API_SECRET=your_okx_secret
OKX_PASSPHRASE=your_okx_passphrase

# Helius API (Solana)
HELIUS_API_KEY=your_helius_key  # Get from https://dev.helius.xyz/

# Database Configuration
DATABASE_URL=sqlite:///backend/db/mipilot.db

# Optional Services
SENTRY_DSN=your_sentry_dsn  # Optional, for error tracking
LOG_LEVEL=INFO  # Optional: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server Configuration
PORT=8000  # Default port for the FastAPI server

# Data Directories
CHARTS_DIR=/data/charts  # Directory for storing chart screenshots
LOGS_DIR=/data/logs  # Directory for storing log files